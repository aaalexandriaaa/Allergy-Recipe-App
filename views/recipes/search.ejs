<%- include('../partials/header') %>


<!-- Search form
<input class="form-control" type="text" placeholder="Search" aria-label="Search"> -->
<h3>Search for a recipe that's free of the following allergens:</h3>
<form action="/recipes/search" method="POST">
    <!-- KEEP THIS CODE. IT'S FOR ADDING NEW ALLERGIES <form action="/users/allergies/new" method="POST"> -->
    <div class="form-check">
        <!-- PASS IN ALLERGY INFORMATION & USE TERNARY FOR THE CHECKED BOXES -->
        <input class="form-check-input" type="checkbox" id="defaultCheck1" name="gluten" value="true">

        <label class="form-check-label" for="defaultCheck1">Gluten Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck2" name="dairy" value="true">
        <label class="form-check-label" for="defaultCheck2">Dairy Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck3" name="eggs" value="true">
        <label class="form-check-label" for="defaultCheck3">Eggs Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck4" name="finFish" value="true">
        <label class="form-check-label" for="defaultCheck4">Finned Fish Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck5" name="shellfish" value="true">
        <label class="form-check-label" for="defaultCheck5">Shellfish Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck6" name="treeNuts" value="true">
        <label class="form-check-label" for="defaultCheck6">Tree Nuts Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck7" name="peanuts" value="true">
        <label class="form-check-label" for="defaultCheck7">Peanuts Free</label><br>
        <input class="form-check-input" type="checkbox" id="defaultCheck8" name="soybeans" value="true">
        <label class="form-check-label" for="defaultCheck8">Soy Free</label><br>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</form>

<div class='wrapper'>
    <% if (recipes.length) {%>
    <% recipes.forEach(function(r) { %>
    <div class="card" style="width:18rem;">
        <img class=" card-img-top" src="<%=r.imageUrl%>" alt="<%=r.recipeName%> image">
        <div class="card-body">
            <h5 class="card-title"><%= r.name %></h5>
            <!-- <p class="card-text">this recipe is blah free</p> -->
            <a href="<%=r.recipeUrl%>" class="btn btn-primary" target="_blank">View this recipe at <%=r.blogName%> </a>
        </div>
    </div>
    <% }); %>
    <% } else { %>
    <h3>No Recipes Yet!</h3>
    <% } %>







    <%- include('../partials/footer') %>