<%- include('../partials/header') %>

<h3 class="profile-padding"><%= title %></h3>

<h4 class="profile-padding">Your Allergies:</h4>
<div class="profile-padding-no-top">
    <% if (!user.allergies){ %>
    <p><%-'There are no allergies associated with this account'%></p>
    <%} else {%>
    <% for (i=0; i<(allergyArray.length-4); i++){ %>
    <% if (allergies[allergyArray[i]] === true) {%>
    <li>
        <%if (allergyArray[i] === "gluten") {%> <%="Gluten"%> <% } %>
        <%if (allergyArray[i] === "dairy") {%> <%="Dairy"%> <% } %>
        <%if (allergyArray[i] === "eggs") {%> <%="Eggs"%> <% } %>
        <%if (allergyArray[i] === "finFish") {%> <%="Fin Fish"%> <% } %>
        <%if (allergyArray[i] === "shellfish") {%> <%="Shellfish"%> <% } %>
        <%if (allergyArray[i] === "treeNuts") {%> <%="Tree Nuts"%> <% } %>
        <%if (allergyArray[i] === "peanuts") {%> <%="Peanuts"%> <% } %>
        <%if (allergyArray[i] === "soybeans") {%> <%="Soybeans"%> <% } %>
    </li>
    <% } %>
    <% } %>
    <% } %>
</div>
<div>
    <section>
        <a href="/users/allergies/new" class="badge badge-info profile-padding"
            style="font-size:larger"><%-user.allergies?'Edit Allergies': 'Add Allergies'%></a>
    </section>
</div>
<h5 class="profile-padding">Recipes You've Added:</h5>
<div class='wrapper'>
    <% if (recipes.length) {%>
    <% recipes.forEach(function(r) { %>
    <div class="card" style="width:18rem;">
        <img class=" card-img-top" src="<%=r.imageUrl%>" alt="<%=r.recipeName%> image">
        <div class="card-body">
            <h5 class="card-title"><%= r.name %></h5>
            <p class="card-text">This recipe is free from:
                <% for (i=0; i<(allergyArray.length-4); i++){ %>
                <% if (allergyObject[r.allergies][allergyArray[i]] === true) {%>
                <li>
                    <%if (allergyArray[i] === "gluten") {%> <%="Gluten"%> <% } %>
                    <%if (allergyArray[i] === "dairy") {%> <%="Dairy"%> <% } %>
                    <%if (allergyArray[i] === "eggs") {%> <%="Eggs"%> <% } %>
                    <%if (allergyArray[i] === "finFish") {%> <%="Fin Fish"%> <% } %>
                    <%if (allergyArray[i] === "shellfish") {%> <%="Shellfish"%> <% } %>
                    <%if (allergyArray[i] === "treeNuts") {%> <%="Tree Nuts"%> <% } %>
                    <%if (allergyArray[i] === "peanuts") {%> <%="Peanuts"%> <% } %>
                    <%if (allergyArray[i] === "soybeans") {%> <%="Soybeans"%> <% } %>
                </li>
                <% } %>
                <% } %>
            </p>
            <a href="<%=r.recipeUrl%>" class="btn btn-info" target="_blank">View this recipe at <%=r.blogName%> </a>
            <a href="/recipes/<%=r._id%>/update" class="btn btn-info">Edit
                this Recipe</a>
            <form action="/recipes/<%=r._id%>?_method=DELETE" method="POST"><button class="btn btn-info">Delete
                    this
                    Recipe</button></form>
        </div>
    </div>
    <% }); %>
    <% } else { %>
    <h5 class="profile-padding">You haven't added any recipes yet! </h5>
    <% } %>
</div>
<%- include('../partials/footer') %>